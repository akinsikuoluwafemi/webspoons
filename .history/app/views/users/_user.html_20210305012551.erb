<table id="users" class="container" >
  <thead>
    <tr>
      <th>

        <%= link_to "Name", :sort => "name" %> 

      </th>

      <th>

      <%= link_to "Email", :sort => "email" %> 
      
      </th>
      <th>

        <%= link_to "Title", :sort => "title" %> 

      </th>
      <th>

        <%= link_to "Phone", :sort => "phone" %> 

      </th>
      <th>
        <%= link_to "Status", :sort => "status" %> 

      </th>
      <th colspan="3"></th>
    </tr>
  </thead>




  <tbody >
    <% @users.each do |user| %>

        <tr id="<%= user.id %>">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.title %></td>
        <td><%= user.phone %></td>
        <% if user.status === false %>

            <td>
                <p class="text-danger">inactive</p>
            </td>

          <% elsif user.status === true%>
             <td>
                <p class="text-success">active</p>
            </td>

        <%end%>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>

        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: 'delete' %></td>
      </tr>


    <% end %>
  </tbody>


</table>
