 <p id="notice"><%= notice %></p>

<div class="container">
    <h1>Users</h1>


  <div class="digg_pagination mt-3 mb-5">
    <div class="page_info">
      <%= page_entries_info @users %>
    </div>
    <%= will_paginate @users, :container => false %>
  </div>


<table class="container" >
  <thead>
    <tr>
      <th>

        <%= link_to "Name", :sort => "name" %> 

      </th>

      <th>

      <%= link_to "Email", :sort => "email" %> 
      
      </th>
      <th>

        <%= link_to "Title", :sort => "title" %> 

      </th>
      <th>

        <%= link_to "Phone", :sort => "phone" %> 

      </th>
      <th>
        <%= link_to "Status", :sort => "status" %> 

      </th>
      <th colspan="3"></th>
    </tr>
  </thead>




  <tbody >
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.title %></td>
        <td><%= user.phone %></td>
        <% if user.status === false %>

            <td>
                <p class="text-danger">inactive</p>
            </td>

          <% elsif user.status === true%>
             <td>
                <p class="text-success">active</p>
            </td>

        <%end%>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><>
        <%# <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> %>
      </tr>
    <% end %>
  </tbody>


</table>

   <div class="digg_pagination mt-5">
    <div class="page_info">
      <%= page_entries_info @users %>
    </div>
    <%= will_paginate @users, :container => false %>
  </div>

